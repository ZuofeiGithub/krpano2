    <scene name="scene_achilleion-hof-unten" title="Achilleion - Garden" onstart="" thumburl="snow.jpg" lat="39.563340"
           lng="19.904324" heading="0.0">

        <view hlookat="-30" vlookat="20" fovtype="MFOV" fov="120" fovmin="70" fovmax="140" limitview="auto"/>
        <area mode="align" align="lefttop"  x="0"  y="60"  width="100%" height="100%"/>
        <preview url="panos/achilleion-hof-unten.tiles/snow.jpg"/>

        <image>
            <sphere url="images/snow.jpg"/>
        </image>
        <!-- 文本框的属性 textfield.swf是文字插件，首先要让文本框的图层不可显示 -->
        <layer name="hotspot_pos_info"
               url="viewer/plugins/textfield.swf"
               visible="false"
               html=""
               css="font-family:Courier;"
               padding="8"
               align="lefttop" x="10" y="10"
               width="200"
        />

        <!-- 文本框的显示内容与显示 -->
        <action name="print_hotspot_pos"><![CDATA[
	copy(print_ath, ath);
	copy(print_atv, atv);
	roundval(print_ath, 3);
	roundval(print_atv, 3);
	calc(layer[hotspot_pos_info].html, '名称：' + name + '[br]水平视角：' + print_ath + '[br]垂直视角: ' + print_atv);
	set(layer[hotspot_pos_info].visible,true);
	set(layer[closetext].visible,true);
	set(layer[closetext].alpha,1.0);
	tween(layer[hotspot_pos_info].width,0,0.5,easeOutQuint,tween(layer[hotspot_pos_info].width,200));
]]></action>

        <!-- 文本框的关闭按钮 alpha为透明度，此处设置为0，则关闭按钮透明不可见了-->
        <layer name="closetext" keep="true" url="close.png" x="168" y="42" width="32" height="32" visible="false" onclick="closetext(); "/>
        <action name="closetext"> set(layer[hotspot_pos_info].visible,false); set(layer[closetext].alpha,0.0);</action>

