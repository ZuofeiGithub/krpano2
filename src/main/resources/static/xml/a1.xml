    <include url="vr_tooltips.xml"/>
    <image>
        <sphere url="/images/sun.jpg"/>
    </image>
    <autorotate enabled="true" waittime="1.5" speed="10.0" horizon="0.0" tofov="0.0"/>
    <events onnewpano="delayedcall(autoscene,15,nextscene);" onremovepano="stopdelayedcall(autoscene);"/>
    <action name="nextscene">
        add(newsceneindex, scene[get(xml.scene)].index, 1);
        if(newsceneindex LT scene.count, loadscene(get(scene[get(newsceneindex)].name),null, MERGE, BLEND(0.5)););
        update_button_states();
    </action>
    <view hlookat="10"
          vlookat="90"
          fov="90"
          maxpixelzoom="1.0"
          limitview="fullrange"/>
    <!--<plugin name="textfield" url.flash="viewer/plugins/textfield.swf"  rootpath="" preload="true" keep="false"/>-->
